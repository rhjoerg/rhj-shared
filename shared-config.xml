<?xml version="1.0" encoding="utf-8"?>

<config directory="target/repositories">
	<credentials username="${env.GITHUB_USERNAME}" password="${env.GITHUB_PASSWORD}" />
	<references>
		<reference id="rhj-shared" uri="https://github.com/rhjoerg/rhj-shared.git">
			<targets>
				<target id="rhj-settings-manager" uri="https://github.com/rhjoerg/rhj-settings-manager.git" branch="master">
					<entries>
						<entry source="settings.xml" />
					</entries>
				</target>
			</targets>
			<entries>
				<entry source="LICENSE" destination="LICENSE" />
			</entries>
		</reference>
	</references>
</config>
